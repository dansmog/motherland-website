---
import { Image } from "astro:assets";
import ThemeWrapper from "./ThemeWrapper.astro";
import LogoGreen from "../images/fullgreen_logo.png";
---

<section class="bg-white">
  <ThemeWrapper>
    <section class="grid grid-cols-1 md:grid-cols-2 mb-16">
      <div class="">
        <Image
          src={LogoGreen}
          alt="motherland logo"
          decoding="async"
          loading="lazy"
          class="h-8 w-auto"
        />

        <p class="max-w-96 text-base text-[#656363] mt-4 font-body-medium">
          Own a property back home with our hassle-free Mortgage Plan
        </p>
      </div>
      <div class="grid grid-cols-1 gap-8 md:gap-0 md:grid-cols-2 mt-8 md:mt-0">
        <div class="flex flex-col gap-[10px]">
          <h6 class="text-lg font-body-bold">Resources</h6>
          <a
            href="#whyus"
            class="text-base font-body-medium text-[#656363] hover:text-black transition-all duration-700 ease-in-out"
            >Why us - learn more</a
          >
          <a
            href="#ourmodel"
            class="text-base font-body-medium text-[#656363] hover:text-black transition-all duration-700 ease-in-out"
            >How it works</a
          >
          <a
            href="#faqs"
            class="text-base font-body-medium text-[#656363] hover:text-black transition-all duration-700 ease-in-out"
            >Frequently asked questions</a
          >
          <a
            href="/privacy"
            class="text-base font-body-medium text-[#656363] hover:text-black transition-all duration-700 ease-in-out"
            >Privacy policy</a
          >
        </div>

        <div class="flex flex-col gap-[10px]">
          <h6 class="text-lg font-body-bold">Connect with us</h6>
          <a
            href="mailto:info@motherland.com"
            class="text-base font-body-medium text-[#656363] hover:text-black transition-all duration-700 ease-in-out"
            >info@motherland.homes
          </a>
          <div class="flex gap-5 items-center mt-4 md:mt-8">
            <a href="">
              <img src="./images/instagram.svg" />
            </a>
            <a href="">
              <img src="./images/twitter.svg" />
            </a>
            <a href="">
              <img src="./images/linkedin.svg" />
            </a>
            <a href="">
              <img src="./images/tiktok.svg" />
            </a>
          </div>
        </div>
      </div>
    </section>
    <p class="text-sm text-[#656363] text-center font-body-medium">
      Copyright Â© motherland 2024. All rights reserved. | {" "}<a
        href="/privacy">Privacy policy</a
      >
    </p>
  </ThemeWrapper>
</section>
