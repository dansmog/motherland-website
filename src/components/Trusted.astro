---
import { Image } from "astro:assets";
import ThemeWrapper from "../components/ThemeWrapper.astro";

import CMA from '../images/canadian_mortgage_authority.jpg';
import MPC from '../images/mpc.jpg';
import Reedan from '../images/reedan.webp';
---

<section class="bg-white pt-10 md:pt-24 pb-5 mb:pb-10 mb-10" id="ourmodel">
  <ThemeWrapper>
    <section class="w-full flex flex-col justify-center items-center">
      <header class="max-w-lg flex flex-col text-center justify-center">
          <h1 class=" font-body-bold text-2xl md:text-4xl">Trusted By Authorities in Canada & Nigeria</h1>
          <p class="font-body-medium text-sm md:text-base text-[#707070] mt-4">Motherland is duly licensed and supported by the appropriate bodies in both Canada and Nigeria</p>
      </header>

        <div class="flex gap-8 md:gap-12 items-center max-w-[620px] mt-10">
          <Image 
            src={CMA}
            alt="canadian mortgage authority"
            decoding="async"
            loading="lazy"
            class="h-6 md:h-16"
          />
          <Image 
            src={MPC}
            alt="canadian mortgage authority"
            decoding="async"
            loading="lazy"
            class="h-6  md:h-16 object-cover"
          />
          <Image 
            src={Reedan}
            alt="canadian mortgage authority"
            decoding="async"
            loading="lazy"
            class="h-6 md:h-16"
          />
        </div>
    </section>
  </ThemeWrapper>
</section>